<div class="form-inline">
    <input id="storeSearch" class="form-control" type="text" data-bind="event: {keyup: onTextInput}" placeholder="Введите название или номер магазина">
    <button type="button" data-bind="click:onSearchButton" class="btn btn-primary"> <i class="glyphicon glyphicon-search"></i></button>
</div>
<div class="form-group" style="padding-left:15px;">
    <hr />
    <div class="col-md-6">
        <div data-bind="foreach:storeResult" class="row">
            <div>
                <input type="checkbox" data-bind="value: Id"><span data-bind="text: Id"></span> - <span data-bind="text: Name"></span>
            </div>
        </div>
        <div class="row" style="padding-top:10px;">
            <div>
                <button type="button" data-bind="click:onAddButton" class="btn btn-primary"> <i class="glyphicon glyphicon-check"></i> Добавить</button>
            </div>
        </div>
    </div>    
</div>

<div class="form-group" style="padding-left:15px;">
    <hr />
    <div class="col-md-6">
        <div data-bind="foreach:storeList" class="row">
            <div>
                <span data-bind="text: Id"></span> - <span data-bind="text: Name"></span>&nbsp;<span class="glyphicon glyphicon-remove" data-bind="click: $root.onDeleteButton" style="color:firebrick;cursor:pointer;font-size:12px;"></span>
            </div>
        </div>
    </div>
</div>